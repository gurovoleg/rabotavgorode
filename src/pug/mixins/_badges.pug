//-круглая иконка с фотокамерой
mixin round-icon--photo-camera
	.round-icon.round-icon--photo-camera&attributes(attributes)
		+photo-camera



//-бейдж с цифрой
mixin badge-counter-item( number, text)
	.badge-counter-item&attributes(attributes)
		.badge-counter-item__content
			span.badge-counter-item__text #{text}
			span.badge-counter-item__number #{number}

//-бейджи с цифрой	блок		
mixin badges-counter(modif, Items)
	.badges-counter(class=" badges-counter--"+ modif)
		each item in Items
			+badge-counter-item(item.number, item.text)

//-миксин  группа бейджиков для объекта
mixin badge-group-object(argumentObj)
	.badge-group(class=" badge-group--"+ argumentObj.badgeType)
		each item in argumentObj.items 
			.badge-group-item(class=" badge badge--"+ argumentObj.badgeType)
				a(href="#")= item

//-миксин  группа бейджиков вне миксина карточки
mixin badge-group(modif, ...items)
	.badge-group(class=" badge-group--"+ modif)
		each item in items
			.badge-group-item.badge
				a(href="#")= item
