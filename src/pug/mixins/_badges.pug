//-vip badge for ui-kit
mixin vip-badge(bgColor, color, href, text)
	a.vip-badge(href=""+ href style="background-color:"+ bgColor + "; color:"+ color +";") #{text}

//-vip badge for object
mixin vip-badge-color(argumentObj)
	a.vip-badge(href="#" class=" vip-badge--"+ argumentObj.vipObject.color) #{argumentObj.vipObject.title}
	
//-badge одиночный
mixin badge(text)
	a(href="#" ).badge #{text}


//-badge с модификатором  для группы 
mixin badge-item(data)
	a.badge(href="#" class=" badge--"+ data.modif) #{data.text}

//-job-opening группа бейджиков	
mixin badges-block-items(...items)
	.badges-block-items
		each item in items
			+badge-item(item)

//-job-opening  Блок Бейджи с заголовком и ссылкой
mixin badges-block(badgesGroup)
	.badges-block&attributes(attributes)
		.badges-block__title.heading-2 #{badgesGroup.title}
		+badges-block-items(...badgesGroup.Items)
		+button(badgesGroup.btnText,'#',badgesGroup.btnClass)



//-badge--big
mixin badge--big(text)
	a(href="#").badge.badge--big&attributes(attributes) #{text}


//-круглая иконка фирмы на карточке
mixin round-icon--card(companyLetter, iconSrc)
	if companyLetter ==''
		a(href="#").round-icon.round-icon--card.round-icon--flex
			img.round-icon-img(src=" ../img/company-icons/"+ iconSrc)
	else
		a(href="#").round-icon.round-icon--card&attributes(attributes)
			span(class="round-icon-letter") #{companyLetter}


//-круглая иконка в личном кабинете пользователя
mixin round-icon--user(text, imgSrc)
	if text !==''
		.round-icon.round-icon--user&attributes(attributes) #{text}
	else
		.round-icon.round-icon--user(style="background-image: url(../img/person-icons/"+ imgSrc +");")&attributes(attributes)


