	//- Фильтр Вакансии (мобильный вариант)
	include ../sections/filter-vacancies.pug

	//- Фильтр Отрасли
	+filter-sectors

	//- Фильтр Расположение
	include ../sections/_filter-vacancies-position.pug

	//- Выбор города
	include ../sections/_city-selection.pug
	
	//- Основная секция
	include ../sections/_search-results-tabs__cities.pug
					