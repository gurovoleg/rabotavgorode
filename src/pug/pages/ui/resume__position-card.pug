extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Карточка Должность';
	- var pageClass = 'body--dashboard';
	- var positionCard = {title: 'Должность', sectorSplit:{modif:'sector', items:['Компания', 'Отрасль']}, periodSplit:{modif:'period', items:['Октябрь 2012 — Январь 2014', '1 год 3 месяца'] },siteLink:'companydomain.com', text:'Описание обязанностей общаться с пользователями продукта, изучать их потребности и находить возможности для решения их практических задач.'};

block content
	.container.container--left
		
		.section-ui
			.title Карточка Должность
			
			+position-card(positionCard)
			
			pre.
				+position-card(positionCard)
		.section-ui
			.title Миксин и объект
			pre.
				mixin position-card(cardObject)
					.position-card&attributes(attributes)
						.row
							.col-md-2
								+split-text-object(cardObject.periodSplit)
							.col-md-7
								.position-card__title cardObject.title
								+split-text-object(cardObject.sectorSplit)
								+split-text-object(cardObject.periodSplit)
								.position-card__description.paragrafe cardObject.text
								.position-card__site-link.text-action-grey cardObject.siteLink
				positionCard = {
					title: 'Должность', 
					sectorSplit:{modif:'sector', items:['Компания', 'Отрасль']}, 
					periodSplit:{modif:'period', items:['Октябрь 2012 — Январь 2014', '1 год 3 месяца'] },
					siteLink:'companydomain.com', 
					text:'Описание обязанностей общаться с пользователями продукта, изучать их потребности и находить возможности для решения их практических задач.'
				} 