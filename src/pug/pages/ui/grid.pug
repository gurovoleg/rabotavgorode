extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Сетка - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.container.container--left
		.title(style="text-align:center;") Сетка: для статичных и динамичных страниц

		.title-medium
			strong 1. Динамичные страницы (страницы с поиском)
		
		p(style="border:2px solid red;padding:10px;border-radius:4px;")
			span(style="color:red;font-weight:bold;") IMPORTANT! 
			|  В данной сетке предполагается использование боковой панели aside на разрешение более 1920px
			br
			br
			span(style="color:black;font-weight:bold;") Точки перелома: 
			br
			| 768px: container-aside {max-width:100%;}
			br
			| 992px: container-aside {max-width:100%;}
			br
			| 1920px: container-aside {max-width:1920px;}
			br
			br
			span(style="color:red;font-weight:bold;") IMPORTANT!
			|  Так же используется 3 типа отображения контента: LIST, GRID, MAP.
			

		p.mt-50 1.1 GRID
		
		.container-main
			.container-aside(style="border:5px solid rgba(0,0,0, .04); ")
				.container-content
					.search-result(style="display:block;")
						.row
							.column
								.test-block COL-1
							.column
								.test-block COL-2
							.column
								.test-block COL-3
							.column
								.test-block COL-4
							.column
								.test-block COL-5
							.column
								.test-block COL-6
							.column
								.test-block COL-7
							.column
								.test-block COL-8
							.column
								.test-block COL-9

				.row.row--padding
					.aside(style="background:lightgrey;text-align:center;padding-top:20px;") ASIDE

		pre.
			// Обертка для центрирования контента
			.container-main
				
				// Обертка для контента + боковая панель Aside
				.container-aside
					
					// Основной контент
					.container-content
						
						// Обертка для идентификации (необязательна)
						.search-result
							
							// Ряд (Flex)
							.row
								
								// Колонка
								.column
									.test-block COL-1
								 ...		
								
								.column
									.test-block COL-9

					// Ряд
					.row.row--padding
						
						// Боковая панель Aside
						.aside ASIDE


		p.mt-50 1.2 LIST

		.container-main
			.container-aside(style="border:5px solid rgba(0,0,0, .04);").container-aside--list
				.container-content
					.search-result(style="display:block;")
						.row
							.search-result-list
								.search-result-list__item
									.test-block ITEM-1
								.search-result-list__item
									.test-block ITEM-2
								.search-result-list__item
									.test-block ITEM-2
								.search-result-list__item
									.test-block ITEM-2
							.search-result__item-description
								.test-block COL-2
								
				.aside(style="background:lightgrey;text-align:center;padding-top:20px;") ASIDE

		pre.
			// Обертка для центрирования контента
			.container-main
				
				// Обертка для контента + боковая панель Aside
				.container-aside.container-aside--list
					
					// Основной контент
					.container-content
						
						// Обертка для идентификации (необязательна)
						.search-result
							
							// Ряд
							.row
								
								// Колонка - основная
								.search-result-list

									.search-result-list__item
										.test-block item-1
									
									.search-result-list__item
										.test-block item-2
								
								// Колонка - доп контеннт (описание/карта)
								.search-result__item-description
									.test-block COL-2
					
					// Боковая панель Aside
					.aside
						

		p.mt-50 1.3 MAP

		.container-main
			.container-aside(style="border:5px solid rgba(0,0,0, .04);").container-aside--map
				.container-content
					.search-result(style="display:block;")
						.row
							.search-result-list.search-result-list--map
								.search-result-list__item.middle-map-cards-wrapper
									.middle-map-cards.test-block ITEM-1
								.search-result-list__item.middle-map-cards-wrapper
									.middle-map-cards.test-block ITEM-2
								.search-result-list__item.middle-map-cards-wrapper
									.middle-map-cards.test-block ITEM-2
								.search-result-list__item.middle-map-cards-wrapper
									.middle-map-cards.test-block ITEM-2
							.search-result__item-description.search-result__item-description--map
								#map
								
				.aside(style="background:lightgrey;text-align:center;padding-top:20px;") ASIDE

		pre.
			// Обертка для центрирования контента
			.container-main
				
				// Обертка для контента + боковая панель Aside
				.container-aside.container-aside--map
					
					// Основной контент
					.container-content
						
						// Обертка для идентификации (необязательна)
						.search-result
							
							// Ряд
							.row
								
								// Колонка - основная
								.search-result-list.search-result-list--map

									.search-result-list__item.middle-map-cards-wrapper
										.middle-map-cards.test-block item-1
									
									.search-result-list__item.middle-map-cards-wrapper
										.middle-map-cards.test-block item-2
								
								// Колонка - доп контеннт (карта)
								.search-result__item-description.search-result__item-description--map
									#map
					
					// Боковая панель Aside
					.aside



		.title-medium.mt-50
			strong 2. Статичные страницы

		p(style="border:2px solid red;padding:10px;border-radius:4px;")
			span(style="color:red;font-weight:bold;") IMPORTANT! 
			|  Данная сетка сделана на базе Bootstrap 4 c использованием большинства классов
			br
			span(style="color:black;font-weight:bold;") Точки перелома: 
