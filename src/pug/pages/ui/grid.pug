					.col-xl-6
						.test-block col-xl-6	

		pre.
			.container-main
				.container
					.row
						.col-lg-3
							.test-block.mb-5 col-lg-3
						.col-lg-3
							.test-block.mb-5 col-lg-3
						.col-lg-3
							.test-block.mb-5 col-lg-3
						.col-lg-3
							.test-block.mb-5 col-lg-3
					.row
						.col-6
							.test-block.mb-5 col-6
						.col-6
							.test-block.mb-5 col-6
					.row
						.col-md-6
							.test-block.mb-5 col-md-6
						.col-md-6
							.test-block.mb-5 col-md-6
					.row
						.col-xl-6
							.test-block.mb-5 col-xl-6
						.col-xl-6
							.test-block col-xl-6	
		
		h2.mt-50 Обозначение точек перелома для использования в проекте ( variables.scss ):
		pre.
			$sm: '(min-width: 768px)';
			$md: '(min-width: 992px)';
