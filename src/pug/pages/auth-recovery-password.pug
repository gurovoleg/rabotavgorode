extends ../layouts/page-layout/page.pug

block variables
	- var title = 'Сброс пароля';
	- var pageClass = 'index-page';
	- var HeaderAutorize = {modif: '',lightHeaderBtn: {btnText:'', btnHref:'', btnClass:''} }
block content
	.autorization-wrapper
		+pageHeader(HeaderAutorize)

		.bg-logo-menu-dropdown.bg-logo-menu-dropdown--small-header
			.container-aside.container-aside--no-padding.authorize-header--dropdown
				include ../sections/_main-menu--page-auth.pug
		
		.autorization
			.autorization-block
				.autorization-block-wrapper
					.authorize-block__title Сброс пароля
					include ../sections/_recovery-password.pug
					include ../sections/_social-icons.pug
			.autorization-advblock ADV-BLOCK